@model SearchRequestViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Stop search</h1>

@*
    allow user to search for another bar or a hotel
        search by zip or addressa drop down that says bar or htel
*@

<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchForBarOrHotel">
            <div class="form-group">
                <label class="control-label">Search Address or Zip</label>
                <input name="query" type="text" class="form-control" />
                @*@Html.TextBoxFor(x => x.Address)*@
            </div>@Html.DropDownListFor(x => x.StopType, new List<SelectListItem> {
              new SelectListItem { Text = "Brewery", Value = "Brewery"},
              new SelectListItem { Text = "Hotel", Value = "Hotel"}
         })

        <div class="form-group">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
        </form>
    </div>
</div>

